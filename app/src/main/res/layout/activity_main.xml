<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="16dp"
    >

    <TextView
        android:id="@+id/titleApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOKENPÃ” GAME"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        />

    <ImageButton
        android:id="@+id/rockImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rock"
        app:layout_constraintTop_toBottomOf="@id/titleApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/paperImg"
        android:padding="10dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Pedra"
        />

    <ImageButton
        android:id="@+id/paperImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/paper"
        app:layout_constraintTop_toBottomOf="@id/titleApp"
        app:layout_constraintStart_toEndOf="@id/rockImg"
        app:layout_constraintEnd_toStartOf="@+id/scissorsImg"
        android:padding="10dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Papel"
        />

    <ImageButton
        android:id="@+id/scissorsImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scissors"
        app:layout_constraintTop_toBottomOf="@id/titleApp"
        app:layout_constraintStart_toEndOf="@id/paperImg"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Tesoura"
        />

</androidx.constraintlayout.widget.ConstraintLayout>